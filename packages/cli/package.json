{
  "author": "Jimmy chu <jimmychu0807@gmail.com>",
  "name": "@aoc-2021/cli",
  "description": "CLI for @aoc-2021 monorepo",
  "homepage": "https://jimmychu0807.github.io/advent-of-code-2021/",
  "repository": "https://github.com/jimmychu0807/advent-of-code-2021",
  "license": "MIT",
  "version": "0.0.1-alpha.1",
  "main": "dist/cli.js",
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "build": "tsc -p .",
    "clean": "del -f dist node_modules tsconfig.tsbuildinfo",
    "lint": "eslint 'src/**/*.ts' --ext .ts --fix && prettier -w --config .prettierrc 'src/**/*.ts'",
    "test": "exit 0",
    "cli": "node dist/cli.js",
    "cli:dev": "ts-node src/cli.ts",
    "validate": "yarn build && yarn test && yarn lint"
  },
  "dependencies": {
    "@aoc-2021/binary-diagnostic": "workspace:*",
    "@aoc-2021/dive": "workspace:*",
    "@aoc-2021/giant-squid": "workspace:*",
    "@aoc-2021/sonar-sweep": "workspace:*",
    "@aoc-2021/utils": "workspace:*",
    "commander": "^9.3.0"
  },
  "devDependencies": {
    "@types/debug": "^4",
    "@types/node": "^16.11.43",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
