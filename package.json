{
  "name": "@aoc-2021/root",
  "version": "0.0.1",
  "description": "Advent of Code 2021",
  "repository": "https://github.com/jimmychu0807/advent-of-code-2021",
  "author": "Jimmy chu <jimmychu0807@gmail.com>",
  "main": "src/cli.ts",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "main": "ts-node src/cli.ts",
    "build": "yarn clean && tsc --build",
    "clean": "rm -rf ./dist",
    "lint:all": "tsc --build && eslint 'packages/*/src/**/*.ts' 'src/**/*.ts' --ext .ts --fix && prettier -w --config .prettierrc 'packages/*/src/**/*.ts' 'src/**/*.ts'",
    "test:all": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'packages/*/tests/**/*.ts'"
  },
  "dependencies": {
    "commander": "^9.3.0"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest-esm": "^1.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "lerna": "^5.1.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "packageManager": "yarn@3.2.1"
}
