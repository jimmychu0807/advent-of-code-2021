{
  "extends": "@tsconfig/node16-strictest/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2021",
    "types": ["mocha", "node"]
  }
}
