{
  "extends": "@tsconfig/node20/tsconfig.json",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2021",
    "types": ["mocha", "node"]
  },
  "ts-node": {
    "esm": true
  }
}
